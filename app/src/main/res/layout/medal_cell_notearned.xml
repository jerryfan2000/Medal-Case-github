<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <com.jerry.medalcase.Widget.SquareImageView
        android:id="@+id/medalImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:alpha="0.2"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/medalImage"
        android:textSize="@dimen/event_text_size"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:alpha="0.2"
        android:textColor="@color/eventTextColor"/>

    <TextView
        android:id="@+id/eventResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/event_text_size"
        android:textColor="@color/eventTextColor"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.2"
        android:layout_below="@id/eventTitle"/>

</RelativeLayout>